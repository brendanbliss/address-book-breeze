<div class="container py-4 text-center d-flex justify-content-center">
  <div style="min-width: 300px;">
    <h2 class="h3 mb-3 font-weight-normal">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :first_name, class:"sr-only" %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control mb-3", placeholder: "First Name*" %>

      <%= f.label :last_name, class:"sr-only" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control mb-3", placeholder: "Last Name*" %>

      <%= f.label :email, class:"sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3", placeholder: "Email Address*" %>

      <%= f.label :password, class:"sr-only" %>
      <% if @minimum_password_length %>
        <span class="pl-1 text-xs text-grey-dark"><em>(<%= @minimum_password_length %> characters minimum)</em></span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3", placeholder: "Password*" %>

      <%= f.label :password_confirmation, class:"sr-only" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3", placeholder: "Confirm Password*" %>

      <%= f.submit "Sign up", class: "btn btn-lg btn-success btn-block" %>

    <% end %>

    <hr class="mt-6 border" />

    <%= render "devise/shared/links" %>
  </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>My Address Book</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <%= link_to root_path, class:"navbar-brand" do %>
          My Address Book
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "Home", root_path, class:"nav-link" %>
            </li>
            <!--<li class="nav-item">
              <%#= link_to 'Create Offer', new_offer_path, class:"nav-link" %>
            </li>-->
          </ul>
      
          <!--<ul class="navbar-nav justify-content-end">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
              <div class="dropdown-menu" style="right: 0; left: auto !important;" aria-labelledby="dropdown03">
                <%# if user_signed_in? %>
                  <%#= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %>
                  <%#= link_to "Log out", destroy_user_session_path, method: :delete, class:"dropdown-item" %>
                <%# else %>
                  <%#= link_to "Login", new_user_session_path, class:"dropdown-item" %>
                  <%#= link_to "Sign Up", new_user_registration_path, class:"dropdown-item" %>
                <%# end %>
              </div>
            </li>
          </ul>-->
        </div>
      </nav>
    </header>

    <% flash.each do |type, message| %>
      <% if type == "alert" %>
        <div class="bg-danger py-2">
          <div class="container text-white"><%= message %></div>
        </div>
      <% end %>
      <% if type == "notice" %>
        <div class="bg-success py-2">
          <div class="container text-white"><%= message %></div>
        </div>
      <% end %>
    <% end %>

    <%= yield %>

    <footer class="py-5 bg-dark">
      <div class="container">
        <div class="row">
          <div class="col align-self-center">
            <%= link_to root_path, class:"d-block mb-2 text-white", style: "font-size: 25px;"  do %>
              My Address Book
            <% end %>
            <small class="d-block mb-3 text-muted">Brendan Bliss Â© 2020</small>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<div class="container my-4">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <%= image_tag contact_image(@contact), class: "card-img-top" %>
        <div class="card-body">
          <h3 class="card-title font-weight-bold"><%= @contact.full_name %></h3>
          <p class="card-text"><%= @contact.notes %></p>
        </div>
        <div class="card-body pt-0">
          <a href="#" class="card-link"><%= @contact.phone %></a>
          <a href="#" class="card-link"><%= @contact.email %></a>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title font-weight-bold">Address</h5>
          <p class="card-text"><%= @contact.street_address %></p>
          <p class="card-text"><%= @contact.city %>, <%= @contact.state %> <%= @contact.zip_code %></p>
          <p class="card-text"><%= @contact.country %></p>
        </div>
      </div>
    </div>

  </div>

  <div class="row mt-4">
    <div class="col">
      <%= link_to 'Edit', edit_contact_path(@contact), class: "btn btn-secondary mb-3" %>
      <%= link_to 'Delete', @contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mb-3" %>
    </div>
  </div>

</div>



<div class="container my-4">
  <div class="row">
    <div class="col">
      <h1>Contacts</h1>

      <%= link_to 'Add Contact', new_contact_path, class: "btn btn-success mb-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <ul class="list-group">
        <% @contacts.each do |contact| %>
          <li class="list-group-item">
            <img src="https://images.unsplash.com/photo-1613037060849-110842e70cbc?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=334&q=80" alt="..." class="img-thumbnail img-icon">
            <%= link_to "#{contact.first_name} #{contact.last_name}", contact %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container my-4">
  <div class="row">
    <div class="col">
      <h1>Contacts</h1>

      <%= link_to 'Add Contact', new_contact_path, class: "btn btn-success mb-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <ul class="list-group">
        <% @contacts.each do |contact| %>
          <li class="list-group-item">
            <%= image_tag contact_image(contact), class: "img-thumbnail img-icon", width: "100" %>
            <%= link_to "#{contact.first_name} #{contact.last_name}", contact %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
